<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverSettingActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/settingback"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="-175dp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/settingtitle"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            />

<!--    <ImageView-->
<!--        android:layout_width="100sp"-->
<!--        android:layout_height="100sp"-->
<!--        android:id="@+id/profileImage"-->
<!--        android:src="@mipmap/ic_launcher"-->
<!--        android:layout_marginBottom="20sp"/>-->

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="30dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_width="10dp"
            app:civ_border_color="#fff"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:padding="15dp"
        android:background="@drawable/settingform"
        android:textColor="#000"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/phone"
        android:hint="Phone"
        android:layout_marginBottom="20sp"
        android:inputType="number"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/settingform"
        android:textColor="#000"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/car"
        android:hint="car"
        android:layout_marginBottom="20sp"
        android:inputType="text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/settingform"
        android:textColor="#000"
        android:textSize="20dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UberX"
            android:text="P-X      "
            android:buttonTint="@color/maincolor"/>
        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UberBlack"
        android:text="P-Black     "
            android:buttonTint="@color/maincolor"/>
        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UberXl"
        android:text="P-XL"
            android:buttonTint="@color/maincolor"/>

    </RadioGroup>
    <Button
        android:layout_marginTop="10sp"
        android:id="@+id/conform"
        android:text="conform"
        android:layout_width="350dp"
        android:layout_height="wrap_content"


        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        android:background="@drawable/calluberbtn"
        />
    <Button
        android:id="@+id/back"
        android:text="Back"
        android:layout_width="350dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        android:background="@drawable/calluberbtn"
        />
    </LinearLayout>
</LinearLayout>