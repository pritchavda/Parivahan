            android:layout_width="100sp"
            android:layout_height="100sp"
            app:civ_border_width="10dp"
            app:civ_border_color="#fff"
            android:id="@+id/userImage"
            android:src="@drawable/ic_baseline_defoultuser"
            android:layout_gravity="center"/>
        <LinearLayout
